@{
    ViewData["Title"] = "Account";
}
<main>
    <section id="breadcrumb-area">
        <div class="container">
            <a asp-controller="Account" asp-action="Index">My Account</a>
            <span>
                <a asp-controller="Home" asp-action="Index">Home / </a>
                <a asp-controller="Account" asp-action="Index"> my account</a>
            </span>
        </div>
        <hr>
    </section>
    <section id="login-register">
        <div class="container">
            <div class="login-register-area">
                <div class="row">
                    <div class="col-lg-6 col-sm-6">
                        <div class="login">
                            <h3>Login</h3>
                            <form>
                                <div class="group inputs">
                                    <input required type="text">
                                    <span class="bar"></span>
                                    <label>User name or email address (required) *</label>
                                    <span class="validation">Please enter a valid message</span>
                                </div>

                                <div class="group inputs">
                                    <input required type="text">
                                    <span class="bar"></span>
                                    <label>Password (required) *</label>
                                    <span class="validation">Please enter a valid message</span>
                                </div>
                                <button type="submit">Log in</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <div class="register">
                            <h3>Register</h3>
                            <form>
                                <p class="first">
                                    Create new account today to reap the benefits of a personalized shopping
                                    experience.
                                </p>
                                <div class="group inputs">
                                    <input required type="text">
                                    <span class="bar"></span>
                                    <label>User name or email address (required) *</label>
                                    <span class="validation">Please enter a valid message</span>
                                </div>
                                <p class="second">
                                    Your personal data will be used to support your experience throughout this
                                    website, to manage access to your account, and for other purposes described in
                                    our privacy policy.
                                </p>
                                <button type="submit">Register</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script src="../assets/js/form.js"></script>
}
