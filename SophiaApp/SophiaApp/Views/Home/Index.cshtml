@model List<Slider>
@{
    ViewData["Title"] = "Home";
}

<main>

    <!-- introduction -->
    <section id="intro-slider">
        <div class="slider-intro">
            @foreach (var item in Model)
            {
                <div class="slider" style="background-image: url('../../assets/images/slider-images/@item.Image')">
                    <h1>@item.Title</h1>
                    <h3>@item.Description</h3>
                    <button>Shop now</button>
                </div>
            }
           
        </div>
    </section>

    <!-- info -->
    <section id="info">
        <div class="container">
            <div class="info-area">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="box ">
                            <div class="icon">
                                <i class="fa-solid fa-gift"></i>
                            </div>
                            <div class="text-area">
                                <p>BONUS PLUS</p>
                                <span>Get a bonus plus for buying more that three products</span>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="box shipping">
                            <div class="icon">
                                <i class="fa-solid fa-truck"></i>
                            </div>
                            <div class="text-area">
                                <p>FREE SHIPPING</p>
                                <span>Free shipping on all orders over $99</span>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="box ">
                            <div class="icon">
                                <i class="fa-solid fa-dollar-sign"></i>
                            </div>
                            <div class="text-area">
